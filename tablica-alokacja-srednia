//2. Użytkownik wprowadza dane do tablicy, alokacja pamięci, obliczyć średnią i zwolnić pamięć
//odczyt wartości alokacja dynamiczna

#include <stdio.h>

void print_array(tab[], int size);


int main(void) {

  int tab[6];
  int (*p)[6];
  p = (int *) malloc ( 6 * sizeof( int )) ;
  
  printf("Podaj 6 liczb całkowitych oddzielonych spacjami: \n");
  scanf("%d %d %d %d %d %d", tab, tab+1, tab+2, tab+3, tab+4, tab+5);

  print_array(tab, 6);
  
  free(p);
  return 0;
}
void print_array(tab[], int size){
  
  int i;

  for(i=0; i<size; i++){
    printf("%d ", *(tab+i));
  }

  free(tab);
  
  return 0;
}
