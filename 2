#include <stdio.h>
#include <stdlib.h>
#define N 15
int **alocate(int n);
void complete_print(int **p, int n);
void dealocate(int **p, int n);
int main(void) {

    int **tab = alocate(N);
    complete_print(tab, N);

    dealocate(tab, N);

    return 0;
}
int **alocate(int n) {
    int **p;

    p = (int **) malloc(n * sizeof(int *));
    for(int i = 0; i < n; i++)
        p[i] = (int *) malloc((n-i) * sizeof(int));

    return p;
}
void complete_print(int **p, int n) {
    for(int i = 0; i < n; i++)
        for(int j = 0; j < n-i; j++)
            p[i][j] = j + 1;

    for(int i = 0; i < n; i++){
        for(int j = 0; j < n-i; j++)
            printf("%d ", p[i][j]);
        printf("\n");
    }
}

void dealocate(int **p, int n) {
    for(int i = 0; i < n; i++)
        free(p[i]);
    free(p);
}
